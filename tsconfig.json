{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2020",
		"module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "newLine": "LF",
    "outDir": "./build",
    "alwaysStrict": true
  },
  "exclude": [
    "./node_modules",
    "./build"
  ],
  "include": [
    "test",
    "src"
  ],
  "atom": {
    "rewriteTsconfig": false
  },
}
